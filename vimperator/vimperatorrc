" default search/suggest engine
set defsearch=google
set suggestengines=google

"completion priority in :[tab]open
set complete=bSl

" max number of listing items
set maxitems=10

set hintmatching=contains

set followhints=1

set focuscontent

" show tabbar only
set gui=none

set hintchars=hsdfgyuiopqwertnmzxcvb

" set escape sequence
cnoremap jk <Esc>
inoremap jk <Esc>

" change font size of follow hints
highlight Hint -append font-size:10pt;

" set tab changing
map <C-h> :tabprevious<CR>
map! <C-h> :tabprevious<CR>
map <C-l> :tabnext<CR>
map! <C-l> :tabnext<CR>

