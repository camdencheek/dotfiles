" Plugin manager
call plug#begin('~/.vim/plugged')

Plug 'PProvost/vim-ps1'
Plug 'scrooloose/nerdcommenter'
Plug 'saltstack/salt-vim'
Plug 'flazz/vim-colorschemes'

call plug#end()

" Syntax Highlighting
syntax on 
colorscheme Chasing_Logic

filetype plugin indent on 
set encoding=utf-8
set tabstop=4
set shiftwidth=4
set smarttab

" Set Statusline
set laststatus=2
set statusline=%.20f
set statusline+=\ %l/%L

" Change escape sequence to  
inoremap jk <ESC>
xnoremap jk <ESC>

" Change vim split bindings
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l

set timeout timeoutlen=200 ttimeoutlen=100

let mapleader = "\<Space>"

